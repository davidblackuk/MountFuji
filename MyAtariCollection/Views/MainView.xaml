<?xml version="1.0" encoding="utf-8"?>

<mvvm:TinyView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:mvvm="clr-namespace:TinyMvvm;assembly=TinyMvvm.Maui"
               xmlns:vm="clr-namespace:MyAtariCollection.ViewModels"
               xmlns:controls="clr-namespace:MyAtariCollection.Controls"
               x:DataType="vm:MainViewModel"
               x:Class="MyAtariCollection.Views.MainView"
               Shell.NavBarIsVisible="False"
               Style="{StaticResource MyPage}"
               >
    <ContentPage.Content>
        
        
        <Grid RowDefinitions="10,60, 10, *, 10" ColumnDefinitions="10,460, 10, *, 10">
            <controls:ApplicationMenu Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"/>
            <controls:SystemSelector Grid.Column="1" Grid.Row="3"/>
            <controls:SystemEditor Grid.Column="3" Grid.Row="3"/>
        </Grid>


    </ContentPage.Content>
</mvvm:TinyView>