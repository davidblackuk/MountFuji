<?xml version="1.0" encoding="utf-8"?>

<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:vm="clr-namespace:MountFuji.ViewModels"
                  xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
                  x:DataType="vm:AboutPopupViewModel"

                  x:Class="MountFuji.Views.AboutPopup">
    <Frame WidthRequest="600" HeightRequest="240" Padding="0" Margin="0">
        
        
        
        <VerticalStackLayout>
            <Label Grid.ColumnSpan="2"
                   Text="About Mount Fuji"
                   HorizontalOptions="Center"
                   Style="{StaticResource H1Label}" />
            
            <Button VerticalOptions="Center" Text="Close" Command="{Binding CloseCommand}" Margin="0,12,15,0" />
        </VerticalStackLayout>
        
    </Frame>
</mopups:PopupPage>