<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MyAtariCollection.Controls"
             x:Class="MyAtariCollection.Controls.ApplicationMenu">
    <Frame  CornerRadius="10"  Style="{StaticResource PanelFrame}" >
    <HorizontalStackLayout >
        <Button  VerticalOptions="Center"  Style="{StaticResource InlineMaterialButton}" Grid.Column="1" Text="{x:Static controls:IconFont.Settings}" 
                 Command="{Binding EditPreferencesCommand}" ToolTipProperties.Text="Open settings"/>

        <Button  VerticalOptions="Center" Style="{StaticResource InlineMaterialButton}" Grid.Column="1" Text="{x:Static controls:IconFont.Add_circle_outline}" 
                 Command="{Binding CreateNewSystemCommand}"  ToolTipProperties.Text="New system"/>
        
        <Button  VerticalOptions="Center" Style="{StaticResource InlineMaterialButton}" Grid.Column="1" Text="{x:Static controls:IconFont.Save}" 
                 Command="{Binding SaveSystemsCommand}"  ToolTipProperties.Text="Save all systems"/>
        
        <Button  VerticalOptions="Center" Text="{x:Static controls:IconFont.Play_circle_outline}" Style="{StaticResource InlineMaterialButton}" Command="{Binding RunCommand}"
                 ToolTipProperties.Text="Run the selected system"/>

        
    </HorizontalStackLayout>
    </Frame>
</ContentView>