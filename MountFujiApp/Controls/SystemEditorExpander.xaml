<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MountFuji.Controls"
             xmlns:vm="clr-namespace:MountFuji.ViewModels"
             x:Class="MountFuji.Controls.SystemEditorExpander"
             Loaded="ConfigurationPanelSection_OnLoaded"
             >
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <VerticalStackLayout Spacing="10" Margin="0">
                <Label Text="{TemplateBinding Title}" Style="{StaticResource H2Label}" VerticalOptions="Center"></Label>
                <ContentPresenter  />
            </VerticalStackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>