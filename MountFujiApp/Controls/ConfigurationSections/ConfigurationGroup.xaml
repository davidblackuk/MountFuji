<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MountFuji.Controls.ConfigurationSections.ConfigurationGroup">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Border Style="{StaticResource Level3Panel}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{TemplateBinding Title}" Style="{StaticResource H3Label}"></Label>
                    <ContentPresenter />
                </VerticalStackLayout>
            </Border>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>