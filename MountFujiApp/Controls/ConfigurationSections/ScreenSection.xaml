<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MountFuji.Controls"
             xmlns:vm="clr-namespace:MountFuji.ViewModels"
             xmlns:controls1="using:MountFuji.Controls"
             xmlns:panes="using:MountFuji.Controls.ConfigurationSections.Panes"
             x:DataType="vm:MainViewModel"
             x:Class="MountFuji.Controls.ConfigurationSections.ScreenSection">
    <controls1:SystemEditorExpander Title="Screen"  Expanded="{Binding SectionVisibility.ExpandScreenSection}">
        <HorizontalStackLayout>
            <panes:AtariMonitorPane/>
            <panes:VdiResolutionPane />
            <panes:HatariScreenPane />
            <panes:Sdl2Pane />
        </HorizontalStackLayout>
    </controls1:SystemEditorExpander>
    
</ContentView>