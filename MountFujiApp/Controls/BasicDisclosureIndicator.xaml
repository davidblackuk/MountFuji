<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MountFuji.Controls.BasicDisclosureIndicator">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid>
                <ContentPresenter  />
                <Ellipse ToolTipProperties.Text="{TemplateBinding ToolTipText}"
                         Fill="{TemplateBinding IndicatorColor}"
                         StrokeThickness="0"
                         WidthRequest="10"
                         HeightRequest="10"
                         VerticalOptions="Start"
                         HorizontalOptions="End"
                         IsVisible="{TemplateBinding IndicatorVisible}" />
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>