<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MountFuji.Views.Keys.KeyExpander">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <mct:Expander IsExpanded="{TemplateBinding IsExpanded}">
                <mct:Expander.Header>
                    <FlexLayout>
                        <Label Text="{TemplateBinding Title}" Style="{StaticResource H2Label}" FlexLayout.Grow="1"></Label>
                        <Label Text="{TemplateBinding ExpanderIcon}" Style="{StaticResource InlineMaterialButton}"></Label>
                    </FlexLayout>
                </mct:Expander.Header>
                <ContentPresenter  Margin="0,10,0,0"/>
            </mct:Expander>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>